<!DOCTYPE html>
<html>
<head>
  <title>Treebook</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
		<div class="navbar-header">
			<a class="navbar-brand" href="#">Phacebook</a>
		</div>
		<div class="collapse navbar-collapse navbar-ex8-collapse">
			<ul class="nav navbar-nav">
				<li><%= link_to "Feed", feed_path %></li>
			</ul>
			<ul class="nav navbar-nav pull-right">
				<% if current_user.present? %>
					<li><%= link_to current_user.full_name, edit_user_registration_path %>
					<li><%= link_to "Sign Out", logout_path, :method => :delete %>
				<% else %>
					<li><%= link_to "Log In", login_path %></li>
					<li><%= link_to "Sign Up", register_path %></li>
				<% end %>
			</ul>

		</div>
	</nav>

	<div class="container">
		<% flash.each do |type, message| %>
			<div class="alert <%= flash_class type %>">
				<button type="button" class="close" data-dismiss="alert">x</button>
				<%= message %>
			</div>
		<% end %>
		


		<%= yield %>
	</div>

</body>

</html>
